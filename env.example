# API Keys
GLADIA_API_KEY=your_gladia_api_key_here
API_KEY=ZsB8aLL8Y7q17NJMOmNAfHgeF306KUihfyO46mFF

# URLs des services
API_GATEWAY_URL=http://api-gateway:8080
REDIS_URL=redis://redis:6379

# Configuration Redis (pour transcription-collector)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_SPEAKER_EVENTS_STREAM=speaker_events_relative

# Configuration des ports
BOT_LAUNCHER_PORT=8081
LOG_MONITOR_PORT=8082
TRANSCRIPT_RETRIEVER_PORT=8083
API_GATEWAY_PORT=18056

# Configuration de la base de données
POSTGRES_DB=vexa
POSTGRES_USER=vexa
POSTGRES_PASSWORD=vexa_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Configuration du réseau
NETWORK_NAME=vexa_default

# Configuration des performances
MAX_CONCURRENT_BOTS=10

# Configuration Vexa (pour les services existants)
ADMIN_API_TOKEN=token
DEVICE_TYPE=cpu
BOT_IMAGE_NAME=vexa-bot:dev

# Logs bot (optionnel)
# Répertoire ABSOLU côté host où seront écrits les fichiers de logs par appel
# (sera monté dans les conteneurs sous /var/log/vexa-bot)
BOT_LOGS_HOST_DIR=/absolute/path/on/host/vexa-bot-logs
# Niveau de logs côté bot (INFO, DEBUG, ERROR)
LOG_LEVEL=INFO

# Screenshot feature control (optionnel)
# Activer ou désactiver la prise de screenshots de debug (true/false)
# Mettre à 'false' pour économiser de l'espace disque (recommandé en production)
BOT_ENABLE_SCREENSHOTS=false

# Keep-Alive audio (optionnel)
# Intervalle en millisecondes pour envoyer un micro-chunk silencieux afin de garder
# la session Gladia "chaude" quand personne ne parle. 0 = désactivé (valeur par défaut)
KEEP_ALIVE_INTERVAL_MS=0

# Ports exposés Vexa (pour les services existants)
API_GATEWAY_HOST_PORT=8056
ADMIN_API_HOST_PORT=8057
TRAEFIK_WEB_HOST_PORT=9090
TRAEFIK_DASHBOARD_HOST_PORT=8085
TRANSCRIPTION_COLLECTOR_HOST_PORT=8123
POSTGRES_HOST_PORT=5438

# Configuration webhook n8n
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/vexa-bot-exit 